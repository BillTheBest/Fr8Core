<!-- BEGIN MAIN CONTENT -->

<div ng-controller="AppListController" class="margin-top-10">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <md-toolbar class="md-table-toolbar md-default" ng-show="!filter.showFilter" style="margin-top: 30px;">
                <div class="md-toolbar-tools">
                    <h2 class="md-title font-green-haze uppercase">Apps</h2>
                    <div flex></div>
                    <md-button class="md-icon-button" ng-click="filter.showFilter = true">
                        <md-tooltip md-direction="top">Filter</md-tooltip>
                        <md-icon md-font-icon="fa fa-filter material-fa-icon"></md-icon>
                    </md-button>
                </div>
            </md-toolbar>

            <md-toolbar class="md-table-toolbar md-default" ng-show="filter.showFilter" style="margin-top: 30px;">
                <div class="md-toolbar-tools">
                    <md-icon md-font-icon="fa fa-search material-fa-icon"></md-icon>
                    <div flex name="filter.form">
                        <md-input-container class="md-block" flex-gt-sm>
                            <input flex type="text" ng-model="query.filter" ng-model-options="filter.options" placeholder="Search" style="border-bottom: 1px solid #000000; border-bottom: 1px solid rgba(0, 0, 0, .12) !important">
                        </md-input-container>
                    </div>
                    <md-button class="md-icon-button" ng-click="removeFilter()">
                        <md-icon md-font-icon="fa fa-times material-fa-icon"></md-icon>
                    </md-button>
                </div>
            </md-toolbar>

            <md-table-container>
                <table md-table md-progress="promise">
                     <tbody md-body>
                        <tr md-row md-auto-select ng-repeat="app in result.plans">
                            <td md-cell class="column-spacer" style="width: 70%;">{{ app.name }}</td>
                            <td md-cell class="column-spacer" style="width: 30%;"><a href="{{app.appLaunchUrl}}" target="_blank" class="btn green route-list-header-button">Launch</a></td>
                        </tr>   
                    </tbody>
                </table>
            </md-table-container>

            <md-table-pagination md-limit="query.planPerPage" md-limit-options="[5, 10, 15, 20]" md-page="query.page" md-total="{{(result.totalPlanCount || result.totalPlanCount === 0) ? result.totalPlanCount : 'NaN'}}" md-on-paginate="loadApps" md-page-select></md-table-pagination>

        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->