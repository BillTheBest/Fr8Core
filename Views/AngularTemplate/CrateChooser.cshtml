<div>
    <span>{{::field.label}}</span>
    <div style="margin-top: 15px;">
        <div class="col-md-12" ng-if="field.crateDescription !== null" style="padding-left: 0px; margin-bottom: 10px;">
            <div class="col-md-12">
                Manifest Type: {{field.crateDescription.manifestType}}
            </div>
            <div class="col-md-12">
                Label: {{field.crateDescription.label}}
            </div>
        </div>
        <div class="col-md-12">
            <a class="btn btn-primary" style="margin-top: 10px;" ng-click="selectCrate()" stop-click-propagation>Select...</a>
        </div>
    </div>
</div>
<script type="text/ng-template" id="TextTemplate-CrateChooserSelectionModal">
    <div class="modal-header">
        <h3 class="modal-title">Select Crate</h3>
    </div>
    <div class="modal-body">
        <ul>
            
        </ul>
        
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
        <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
    </div>
</script>

