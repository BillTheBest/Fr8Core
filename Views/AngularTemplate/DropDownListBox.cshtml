@*RadioButtonGroup control main container*@
<div>  
    <div class="btn-group" dropdown is-open="isopen">
        <button id="single-button" type="button" class="btn btn-primary" dropdown-toggle ng-disabled="disabled">
            {{field.value}} <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li role="menuitem" ng-repeat="listItem in field.listItems"><a href="#" ng-click="field.value=listItem.value">{{listItem.text}}</a></li>
        </ul>
    </div>
</div>
