<div class="filter-pane">
    <form>
        <div>
            <div class="radio">
                <input type="radio"
                       name="executionType"
                       value="2"
                       ng-model="executionType" 
                       id="executionTypeRadio2"
                       stop-click-propagation />
                <label for="executionTypeRadio2" stop-click-propagation>Always proceed</label>
            </div>
            <div class="radio">
                <input type="radio"
                       name="executionType"
                       value="1"
                       ng-model="executionType" 
                       id="executionTypeRadio1"
                       stop-click-propagation />
                <label for="executionTypeRadio1" stop-click-propagation>Proceed only if:</label>
            </div>
        </div>

        <div class="form-group">
            <query-builder-widget fields="fields"
                                  current-action="currentAction"
                                  rows="conditions"
                                  operators="operators"
                                  default-operator="defaultOperator"
                                  is-disabled="executionType == 2">
            </query-builder-widget>
        </div>
    </form>
</div>