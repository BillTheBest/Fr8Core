<div class="portlet light " ng-if="isVisible">
    <div class="portlet-title">
        <div class="caption caption-md">
            <i class="icon-bar-chart font-green-haze hide"></i>
            <span class="caption-subject font-green-haze bold uppercase">{{currentAction.activityTemplateName}}</span>
        </div>
    </div>
    <div class="portlet-body" block-if="processing === true">
        <div ng-if="!currentAction.currentView" ng-repeat="field in currentAction.configurationControls.fields">
            <configuration-field current-action="currentAction" field="field" />
        </div>
        <div ng-if="currentAction.currentView">
            <div ng-repeat="field in currentAction.configurationControls.fields">
                <configuration-field current-action="currentAction" field="field" ng-if="field.fieldLabel==currentAction.currentView" />
            </div>
        </div>
    </div>
</div>
