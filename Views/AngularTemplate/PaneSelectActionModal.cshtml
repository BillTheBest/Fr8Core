<div class="modal-header">
    <h3 class="modal-title">Select an Action</h3>
</div>
<div class="modal-body">
    <div class="select-action-category" ng-repeat="category in activityCategories">
        <h4>{{category.name}}</h4>
        <div class="select-action-list">
            <div class="select-action-row" ng-repeat="activity in category.activities" ng-click="activityTypeSelected(activity)">
                {{activity.name | actionNameFormatter}}
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
</div>