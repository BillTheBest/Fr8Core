<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb hide">
    <li>
        <a href="#">Home</a><i class="fa fa-circle"></i>
    </li>
    <li class="active">
        Dashboard
    </li>
</ul>
<!-- END PAGE BREADCRUMB -->
<!-- BEGIN MAIN CONTENT -->
<div ng-controller="ProcessBuilderController" class="margin-top-10">
    <designer-header route="current.route"></designer-header>
    <div class="process-builder-container" layout-container>
        <div ng-repeat="group in actionGroups" layout-action-group class="action-group" ng-style="{left: group.offsetLeft, top: group.offsetTop}">
            <div class="action-arrow-bottom" ng-style="{top: -group.arrowLength - 60, height: group.arrowLength + 35, left: group.arrowOffsetLeft}"></div>
            <div>
                <div class="action" layout-action ng-repeat-start="action in group.actions" ng-style="{'width' : action.activityTemplate.minPaneWidth || 330 + 'px'}">
                    <div class="action-header" dropdown transfer-click-configure-pane>
                        <p class="action-name">
                            {{action.label}}
                        </p>
                        <a class="action-menu" dropdown-toggle stop-click-propagation>
                            <i class="fa fa-gear fa-5x"></i>
                        </a>
                        <ul class="dropdown-menu pull-right" role="menu" stop-click-propagation>
                            <li role="menuitem">
                                <a ng-click="deleteAction(action);">
                                    <i class="fa fa-trash-o"></i>
                                    Delete
                                </a>
                            </li>
                        </ul>
                    </div>
                    <pane-configure-action id="paneConfigureAction" current-action="action"></pane-configure-action>
                </div>
                <div class="action-arrow-right" ng-repeat-end></div>

                <div class="action action-to-add" ng-click="addAction()">
                    <p class="action-name">Click to add action</p>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->
    
    <div class="well well-lg">
        <drop-down-list-box field='testField1' data-field-name='{{::testField1.name}}'></drop-down-list-box>
        <hr />
        <drop-down-list-box field='testField2' data-field-name='{{::testField2.name}}'></drop-down-list-box>
    </div>
    <div class="well well-lg">
        <label class='control-label'>{{::textField1.label}}</label>
        <input type='text' ng-model='textField1.value' ng-model-options="{ updateOn: 'default blur', debounce: { 'default': 500, 'blur': 0 } }"
                ng-required='textField1.required' data-field-name='{{::textField1.name}}' id='pca__txt__{{::textField1.name | validId}}'
                class='form-control form-control-focus' name='pca__txt__{{::textField1.name | validId}}' stop-click-propagation>
        <hr />

        <label class='control-label'>{{::textField2.label}}</label>
        <input type='text' ng-model='textField2.value' ng-model-options="{ updateOn: 'default blur', debounce: { 'default': 500, 'blur': 0 } }"
                ng-required='textField2.required' data-field-name='{{::textField2.name}}' id='pca__txt__{{::textField2.name | validId}}'
                class='form-control form-control-focus' name='pca__txt__{{::textField2.name | validId}}' stop-click-propagation>

    </div>
    <div class="well well-lg">
        <text-source data-field-name='{{::textSource1.name}}' field="textSource1"></text-source>
        <hr />
        <text-source data-field-name='{{::textSource2.name}}' field="textSource2"></text-source>
    </div>

    <div class="well well-lg">
        <file-picker field='filePicker1'></file-picker>
        <hr />
        <file-picker field='filePicker2'></file-picker>
    </div>
    <div class="well well-lg">
        <filter-pane current-action='action' field='filterPane1'></filter-pane>
        <hr />
        <filter-pane current-action='action' field='filterPane2'></filter-pane>
    </div>
    <div class="well well-lg">
        <manage-route current-action='action'></manage-route>
        <hr />
        <manage-route current-action='action'></manage-route>
    </div>
    <!--
    <div class="well well-lg">
        <mapping-pane current-action='action' field='mappingPane1'></mapping-pane>
        <hr />
        <mapping-pane current-action='action' field='mappingPane2'></mapping-pane>
    </div>
        -->

    <div class="well well-lg">
        <text-area field='textArea1'></text-area>
        <hr />
        <text-area field='textArea2'></text-area>
    </div>

    <div class="well well-lg">
        <text-block field='textBlock1'></text-block>
        <hr />
        <text-block field='textBlock2'></text-block>
    </div>


    <pane-select-action></pane-select-action>
</div>