<div><!--TextBlock control main container-->
    <label>{{field.initialLabel}}:</label>
    <div style="padding-left: 20px;">
        <input name="pca_chk_ts_{{uniqueDirectiveId}}" type="radio" ng-model="field.valueSource" id="pca__chk{{field.$$hashKey}}__value{{uniqueDirectiveId}}" value="specific" ng-click="field.value=''" />
        <label for="pca__chk{{field.$$hashKey}}__value{{uniqueDirectiveId}}" stop-click-propagation>A specific value</label>
        <div class="nested-controls">
            <input type='text' ng-model='field.value' ng-model-options="{ updateOn: 'default blur', debounce: { 'default': 500, 'blur': 0 } }"
                   ng-blur="onChange(field.name)" id='pca__txt{{field.$$hashKey}}__value'
                   class='form-control form-control-focus' name='pca__txt{{field.$$hashKey}}__value' stop-click-propagation>
        </div>
    </div>
    <div style="padding-left: 20px;">
        <input name="pca_chk_ts_{{uniqueDirectiveId}}" type="radio" id="pca__chk{{field.$$hashKey}}__crate{{uniqueDirectiveId}}" value="upstream" ng-model="field.valueSource" ng-click="field.value=''" />
        <label for="pca__chk{{field.$$hashKey}}__crate{{uniqueDirectiveId}}" stop-click-propagation>A value from an upstream Crate</label>
        <div class="nested-controls">
            <drop-down-list-box field='field' change='onChange'></drop-down-list-box>
        </div>
    </div>
</div>