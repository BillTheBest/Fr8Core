    </div>
    <!-- END MAIN CONTENT -->
    <!-- FOOTER -->
    <footer id="footer" class="section">
        <div class="container">
            <p class="copyright">@DateTime.Now.Year © The Fr8 Company. All Rights Reserved.</p>
        </div>
    </footer>
    <!-- END FOOTER -->

    <div class="back-to-top">
        <a href="#top"><i class="fa fa-angle-up"></i></a>
    </div>

