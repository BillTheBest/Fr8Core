@model Web.ViewModels.ManageUserVM
@{
    ViewBag.Title = "ShareCalendar";
}

<h2>Share Calendar</h2>
<p>
    <table>
        <tr>
            <td>
                <div class="row">
                    <div class="col-md-12">
                        
                    </div>
                </div>
                <br />

            </td>
        </tr>
    </table>

<style>
    .granttext a {

    }

</style>

    <table width="" cellpadding="0" cellspacing="0">

        <tr>
            <td height="80" width="186">
            </td>
            <td>
                <b class="custom-btn granttext" style="cursor: pointer">
                    @if (!Model.HasDocusignToken)
                    {
                        @Html.ActionLink("Grant DocuSign Access", "GrantAccess", new { providerName = "Docusign" })
                    }
                    else
                    {
                        @Html.ActionLink("Revoke DocuSign Access", "RevokeAccess", new { providerName = "Docusign" })
                    }
                </b>
            </td>
        </tr>

        <tr>
            <td height="80" width="186"></td>
            <td>
                <b class="custom-btn granttext" style="cursor: pointer">
                    @if (!Model.HasGoogleToken)
                    {
                        @Html.ActionLink("Grant Google Spreadsheets Access", "GrantAccess", new { providerName = "Google" })
                    }
                    else
                    {
                        @Html.ActionLink("Revoke Google Spreadsheets Access", "RevokeAccess", new { providerName = "Google" })
                    }
                </b>
            </td>
        </tr>

        <tr>
            <td height="80">
                <img class="floating" src="/Content/img/MicrosoftExchangelogo.png" alt="Kwasant" title="Kwasant">
            </td>
            <td>
                <b>(Coming Soon) </b>
            </td>
        </tr>

        <tr>
            <td height="80">
                <img class="floating" src="/Content/img/icloud-logo.png" alt="Kwasant" title="Kwasant">
            </td>

            <td>
                <b>(Coming Soon) </b>
            </td>
        </tr>




    </table>
    @if (Model.HasGoogleToken)
    {
        <form action="@Url.Action("ExportGoogleSpreadsheet")" method="POST">
            <div>
                @Html.LabelFor(m => m.GoogleSpreadsheets, "Select Google Spreadsheet")
                @Html.DropDownList("spreadsheetUri", Model.GoogleSpreadsheets.Select(id => new SelectListItem() {Text = id.Value, Value = id.Key}))
                <input type="submit" value="Export"/>
            </div>
        </form>
    }

</p>
<br />
