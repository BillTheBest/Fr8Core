{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/VM_IP.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS1"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "networkInterfaceId": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "osType": "Windows",
            "name": "templ-osDisk.2397cc9d-e7d8-4b40-b8b0-863cf130d119.vhd",
            "createOption": "FromImage",
            "image": {
              "uri": "https://buildservers6531.blob.core.windows.net/system/Microsoft.Compute/Images/vhds/templ-osDisk.2397cc9d-e7d8-4b40-b8b0-863cf130d119.vhd"
            },
            "vhd": {
              "uri": "https://buildservers6531.blob.core.windows.net/vmcontainerac848bd6-6a48-4c96-bfa4-8e854d91477b/osDisk.ac848bd6-6a48-4c96-bfa4-8e854d91477b.vhd"
            },
            "caching": "ReadWrite"
          }
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[parameters('networkInterfaceId')]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "https://buildservers6531.blob.core.windows.net/"
          }
        },
        "provisioningState": 0
      },
      "name": "[parameters('vmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "westus"
    }
  ]
}